<Window x:Class="PR8WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR8WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300"
        Background="{DynamicResource Primary}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="Text" Grid.Row="0" VerticalAlignment="Center" Margin="3" FontSize="18"></TextBox>
        <Button Grid.Row="1" Content="Выгрузить" Margin="5" x:Name="Load" Click="Load_Click" Foreground="{DynamicResource Secondary}"></Button>
        <Button Grid.Row="2" Content="Сохранить" Margin="5" x:Name="Button" Click="Button_Click" Foreground="{DynamicResource Secondary}"></Button>
        <Button Grid.Row="3" x:Name="Change" Margin="5" Content="Сменить тему" Click="Change_Click" Foreground="{DynamicResource Secondary}"></Button>
    </Grid>
</Window>
